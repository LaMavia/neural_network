{
    "exclude": [
        "../../../node_modules/@types/**/*"
    ],
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2015", "es2016", "es2017", "esnext.array"
        ],
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "./build/build.js",
        "sourceRoot": "./src/",
        "rootDir": "./",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "none",
        "esModuleInterop": true
    }
}